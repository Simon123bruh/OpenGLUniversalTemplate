{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "${workspaceFolder}\\src\\glad.c",
                "-g",
                "${file}",
                "-I",
                "${workspaceFolder}\\include",

                //If libglfw3.a is not in your mingw64/libs folder, uncomment these lines:
                /*
                "-L./lib",
                "-lglfw3",
                */

                "-lglfw3",
                "-lopengl32",
                "-lkernel32",
                "-lgdi32",

                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}